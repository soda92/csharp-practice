<Page x:Class="wpf_basic_layouts.WrapPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_basic_layouts"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WrapPanel">


    <WrapPanel Orientation="Horizontal" Margin="10">
        <Button Content="Item 1" Width="80" Height="30" Margin="5"/>
        <Button Content="Item 2 Long Text" Width="120" Height="30" Margin="5"/>
        <Button Content="Item 3" Width="70" Height="30" Margin="5"/>
        <Button Content="Item 4 Very Long" Width="150" Height="30" Margin="5"/>
        <Button Content="Item 5" Width="60" Height="30" Margin="5"/>
        <Button Content="Item 6" Width="90" Height="30" Margin="5"/>
        <TextBlock Text="A long piece of text that will also wrap if needed."
                   Background="LightCyan"
                   TextWrapping="Wrap"
                   Width="100" Height="50"
                   Margin="5"/>
        <Button Content="Item 7" Width="80" Height="30" Margin="5"/>
    </WrapPanel>
</Page>
