<Page x:Class="wpf_navigation.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="LightSalmon">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Here are your Settings." FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Go Back" Width="120" Height="30" Click="GoBack_Click"/>
            <Button Content="Go Home" Width="120" Height="30" Margin="0,10,0,0" Click="GoHome_Click"/>
        </StackPanel>
    </Grid>
</Page>
