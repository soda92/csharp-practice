<Page x:Class="wpf_navigation.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the home page!" FontSize="24" FontWeight="Bold"/>
            <Button Content="Go to Details" Click="GotoDetails_Click"
                    Width="150" Height="30" Margin="5" />
            <Button Content="Go to Settings" Click="GotoSettings_Click" 
                    Width="150" Height="30" Margin="5" />
        </StackPanel>
    </Grid>
</Page>
